{% extends 'back/base.html.twig' %}

{% block title %}
    <title>Table Coach</title>
    
{% endblock %}
{% block body %}
            <!-- Table Start -->
            <div class="row vh-100 bg-secondary rounded align-items-center justify-content-center mx-0">
            <div class="container-fluid pt-4 px-4" style="bottom:0;">
            <a href="{{ path('app_user_newC')}}"><button type="button" class="btn btn-light m-2"><i class="bi bi-person-plus"></i></button></a>
                {# <div class="card-body"> #}
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                             <th>#</th>
                                                <th>Nom</th>
                                                <th>Prenom</th>
                                                <th>UserName</th>
                                                <th>Email</th>
                                                <th>NumTel</th>
                                                <th>Etat</th>
                                                <th>Img</th>
                                                <th>actions</th>
                                        </tr>
                                    </thead>
                                   
                                    <tbody>
                                        {% for user in users %}
                                        <tr>
                                             <td>{{ user.id }}</td>
                                            <td>{{ user.nom }}</td>
                                            <td>{{ user.prenom }}</td>
                                            <td>{{ user.userName }}</td>
                                            <td>{{ user.email }}</td>
                                            <td>{{ user.numTel }}</td>
                                            <td>{{ user.etat }}</td>
                                            <td><img src="{{asset('uploads/'~ user.image )}}" alt="" class="img-thumbnail" style="width:100px;"></td>

                                            <td>
                                            {% if app.user.etat == 0 %}

                                                <form method="post" action="{{ path('app_user_deleteC', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                    <button class="btn">Delete</button>
                                                </form>
                                                <a href="{{ path('app_user_editC', {'id': user.id}) }}">edit</a>
                                                 <a href="{{ path('app_user_coachPdf', {'id': user.id}) }}"><button type="button" class="btn btn-light m-2"><i class='fas fa-file-alt'></i></button></a>
                                                <form method="post" action="{{ path('app_user_bannC', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to ban this user?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                    <button class="btn btn-danger m-2" >Ban</button>
                                                </form>
    
                                                <form method="post" action="{{ path('app_user_anbannC', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to unban this user?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                    <button class="btn btn-success m-2" >UnBan</button>
                                                </form>
                                                {% else %}
                                                    You don't have access to actions
                                                {% endif %}
                                            </td>
                                        </tr>
                                         {% endfor %} 

                                    </tbody>
                                    </table>
                                </div>
                            </div>
                            </div>
            <!-- Table End -->
            {% endblock %}

            