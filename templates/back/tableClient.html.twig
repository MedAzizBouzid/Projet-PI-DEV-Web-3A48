{% extends 'back/base.html.twig' %}
{% block title %}
    <title>Table Client</title>
    
{% endblock %}

{% block body %}
            <!-- Table Start -->
            <div class="row vh-100 bg-secondary rounded align-items-center justify-content-center mx-0">
            <div class="container-fluid pt-4 px-4" style="bottom:0;">
                {# <div class="card-body"> #}
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                                <th>#</th>
                                                <th>Nom</th>
                                                <th>Prenom</th>
                                                <th>UserName</th>
                                                <th>Email</th>
                                                <th>NumTel</th>
                                                <th>Etat</th>
                                                <th>Img</th>
                                                <th>actions</th>
                                        </tr>
                                    </thead>
                                   
                                    <tbody>
                                        {% for user in users %}
                                        <tr>
                                            <td>{{ user.id }}</td>
                                            <td>{{ user.nom }}</td>
                                            <td>{{ user.prenom }}</td>
                                            <td>{{ user.userName }}</td>
                                            <td>{{ user.email }}</td>
                                            <td>{{ user.numTel }}</td>
                                            <td>{{ user.etat }}</td>
                                            <td><img src="{{asset('uploads/'~ user.image )}}" alt="" class="img-thumbnail" style="width:100px;"></td>

                                            <td>
                                                <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                    <button class="btn"><i class="fa fa-trash"></i></button>
                                                </form>
                                                
                                                {# <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a> #}
                                            </td>
                                        </tr>
                                         {% endfor %} 

                                    </tbody>
                                    </table>
                                </div>
                            </div>
                            </div>
            <!-- Table End -->
            {% endblock %}

            